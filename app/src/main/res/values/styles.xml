<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#1150F3</item>
        <item name="colorPrimaryDark">#0A0B12</item>

        <item name="colorAccent">#1150F3</item>
        <item name="colorSwitchThumbNormal">#FDFBFB</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AppAlertTheme</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#FDF8F8</item>
        <item name="actionMenuTextColor">#FDF8F8</item>
        <item name="colorAccent">#FDF8F8</item>
        <item name="colorControlNormal">#FDF8F8</item>
        <item name="colorControlActivated">#FDF8F8</item>
        <item name="colorControlHighlight">#1150F3</item>
        <item name="android:colorBackground">#1150F3</item>
        <item name="android:textColor">#FDF8F8</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">#1150F3</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorHighlight">#FDF8F8</item>
        <item name="colorAccent">#1150F3</item>
        <item name="colorControlNormal">#FDF8F8</item>
    </style>

    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">#1150F3</item>
        <item name="colorAccent">#1150F3</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlNormal">#FDF8F8</item>
        <item name="android:textColorHighlight">#1150F3</item>
    </style>


    <style name="splashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <string name="ad_attribution">Ad</string>
</resources>
